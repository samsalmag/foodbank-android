<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_dishName"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Dish name"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_dishCategories"
        android:textSize="17sp"
        android:layout_below="@+id/textView_dishName"
        android:layout_toStartOf="@+id/button_addToGroceryList"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:text="Category 1, Category 2, Category 3, Category 4, Category 5"
        android:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_addToGroceryList"
        android:layout_alignParentEnd="true"
        app:icon="@drawable/add_to_grocery_list_foreground"
        app:iconSize="50dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>
