<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ingredientQuantity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:text="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ingredientUnit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/textView_ingredientQuantity"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:text="kg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ingredientName"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView_ingredientUnit"
        android:layout_marginStart="10dp"
        android:text="Tomato"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_ingredientComplete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="0dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        />

</RelativeLayout>